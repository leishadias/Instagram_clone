<link rel="stylesheet" href="/css/signup.css">
    <div id="signup-container">
        <div class="container-border" class="center-align">
            <img src="/images/logo.png" alt="logo">
            <form action="/users/create" method="post" class="center-align">
                <input type="text" name="name" required placeholder="Name" class="margin">
                <br>
                <input type="email" name="email" required placeholder="Email" class="margin">
                <br>
                <input type="password" name="password" required placeholder="Password" class="margin">
                <br>
                <input type="password" name="confirmPassword" required placeholder="Confirm password" class="margin">
                <br>
                <input type="submit" value="Sign up" class="margin" id="submit-btn">
            </form>
        </div>
        <p id="divider"><span>or</span></p>
        <div class="container-border center-align">
            <a href="/users/auth/google"><i class="fa-brands fa-google"></i> Login with Google</a>
            <br><br>
            <a href="/users/auth/google"><i class="fa-brands fa-facebook"></i> Login with Facebook</a>
            <br><br>
            <a href="/users/auth/google"><i class="fa-brands fa-github"></i> Login with Github</a>
        </div>
        <p><small>By Signing up you agree to our Terms, Privacy Policy and Cookie Policy.</small></p>
    </div>

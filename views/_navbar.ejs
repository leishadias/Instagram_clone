<aside>
    <div id="logo">
        <% if (title == 'chats'){ %>
            <i class="fa-brands fa-instagram"></i>
        <% }else{ %>
            <img src="/images/logo.png" alt="logo" >
        <% } %> 
    </div>
    <% if(locals.user){ %>
    <ul>
        <li>
            <a class="padding-05" href="/"><i class="fa-solid fa-house"></i>
            <% if (title == 'chats'){ %>
                <span class="hide">Home</span>
            <% }else{ %>
                <span>Home</span>
            <% } %>
            </a>
        </li>
        <li>
            <!-- <a class="padding-05" href="#"> -->
            <div data-bs-toggle="modal" data-bs-target="#search-list" class="padding-05">
                <i class="fa-solid fa-magnifying-glass"></i>
                <% if (title == 'chats'){ %>
                    <span class="hide">Search</span>
                <% }else{ %>
                    <span>Search</span>
                <% } %>
            </div>  
        </a>
        </li>
        <li>
            <a class="padding-05" href="/messages/chats" id="notif">
                <i class="fa-brands fa-facebook-messenger"></i>
                <% if (title == 'chats'){ %>
                    <span class="hide">Messages</span>
                <% }else{ %>
                    <span>Messages</span>
                <% } %>
            </a>
        </li>
        <li>
            <a class="padding-05" href="/posts/create-new-post"><i class="fa-regular fa-square-plus"></i>
                <% if (title == 'chats'){ %>
                    <span class="hide">Create</span>
                <% }else{ %>
                    <span>Create</span>
                <% } %>
            </a>
        </li>
        <li>
            <a class="padding-05" href="/explore"><i class="fa-sharp fa-regular fa-compass"></i>
                <% if (title == 'chats'){ %>
                    <span class="hide">Explore</span>
                <% }else{ %>
                    <span>Explore</span>
                <% } %>
            </a>
        </li>

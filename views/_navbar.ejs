            <a class="padding-05" href="/users/profile/<%= user.id%>"><img src="<%=user.avatar%>" alt="avatar" class="avatar">
                <% if (title == 'chats'){ %>
                    <span class="hide">Profile</span>
                <% }else{ %>
                    <span>Profile</span>
                <% } %>
            </a>
            
        </li>
        <li>
            <a class="padding-05" href="/users/signout">
                <% if (title == 'chats'){ %>
                    <span class="hide">Sign out</span>
                <% }else{ %>
                    <span>Sign out</span>
                <% } %>
            </a>
            
        </li>
    </ul>
    <div>
        <i class="fa-solid fa-bars"></i>
        <% if (title == 'chats'){ %>
            <span class="hide">More</span>
        <% }else{ %>
            <span>More</span>
        <% } %>
    </div>
    <% }else{ %>
        <ul>
            <li>
                <a class="padding-05" href="/users/signin"><i class="fa-solid fa-user"></i><span>Sign in</span></a>
                
            </li>
            <li>
                <a class="padding-05" href="/users/signup"><i class="fa-solid fa-user-plus"></i><span>Sign up</span></a>
                
            </li>
        </ul>
